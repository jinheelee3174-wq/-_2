<Window x:Class="계산기_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="나의 계산기" Height="700" Width="500" Background="#F0F0F0">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="txtResult" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
                 Text="0" FontSize="48" TextAlignment="Right" VerticalContentAlignment="Center" 
                 IsReadOnly="True" Background="White" Margin="2" Padding="10"/>

        <Button x:Name="btnPersent" Click="NumberBtn_Click"  Content="%" Grid.Row="1" Grid.Column="0" Margin="2" FontSize="20"/>
        <Button x:Name="btnCE" Click="NumberBtn_Click"  Content="CE" Grid.Row="1" Grid.Column="1" Margin="2" FontSize="20"/>
        <Button x:Name="btnC" Click="NumberBtn_Click"  Content="C" Grid.Row="1" Grid.Column="2" Margin="2" FontSize="20"/>
        <Button x:Name="btnBack" Click="NumberBtn_Click"  Content="←" Grid.Row="1" Grid.Column="3" Margin="2" FontSize="20"/>

        <Button x:Name="btn7" Click="NumberBtn_Click" Content="7" Grid.Row="2" Grid.Column="0" Margin="2" FontSize="25" FontWeight="Bold"/>
        <Button x:Name="btn8" Click="NumberBtn_Click" Content="8" Grid.Row="2" Grid.Column="1" Margin="2" FontSize="25" FontWeight="Bold"/>
        <Button x:Name="btn9" Click="NumberBtn_Click" Content="9" Grid.Row="2" Grid.Column="2" Margin="2" FontSize="25" FontWeight="Bold"/>
        <Button x:Name="btnMul"  Click="NumberBtn_Click"  Content="×" Grid.Row="2" Grid.Column="3" Margin="2" FontSize="25" Background="#E0E0E0"/>

        <Button x:Name="btn4" Click="NumberBtn_Click" Content="4" Grid.Row="3" Grid.Column="0" Margin="2" FontSize="25" FontWeight="Bold"/>
        <Button x:Name="btn5" Click="NumberBtn_Click" Content="5" Grid.Row="3" Grid.Column="1" Margin="2" FontSize="25" FontWeight="Bold"/>
        <Button x:Name="btn6" Click="NumberBtn_Click" Content="6" Grid.Row="3" Grid.Column="2" Margin="2" FontSize="25" FontWeight="Bold"/>
        <Button x:Name="btnSub"  Click="NumberBtn_Click" Content="-" Grid.Row="3" Grid.Column="3" Margin="2" FontSize="25" Background="#E0E0E0"/>

        <Button x:Name="btn1" Click="NumberBtn_Click" Content="1" Grid.Row="4" Grid.Column="0" Margin="2" FontSize="25" FontWeight="Bold"/>
        <Button x:Name="btn2" Click="NumberBtn_Click" Content="2" Grid.Row="4" Grid.Column="1" Margin="2" FontSize="25" FontWeight="Bold"/>
        <Button x:Name="btn3" Click="NumberBtn_Click" Content="3" Grid.Row="4" Grid.Column="2" Margin="2" FontSize="25" FontWeight="Bold"/>
        <Button x:Name="btnAdd"  Click="NumberBtn_Click" Content="+" Grid.Row="4" Grid.Column="3" Margin="2" FontSize="25" Background="#E0E0E0"/>

        <Button x:Name="btnEnd" Click="NumberBtn_Click"  Content="End" Grid.Row="5" Grid.Column="0" Margin="2" FontSize="20"/>
        <Button x:Name="btn0" Click="NumberBtn_Click"  Content="0" Grid.Row="5" Grid.Column="1" Margin="2" FontSize="25" FontWeight="Bold"/>
        <Button x:Name="btnDot" Click="NumberBtn_Click"  Content="." Grid.Row="5" Grid.Column="2" Margin="2" FontSize="25"/>
        <Button x:Name="btnEqual" Click="NumberBtn_Click"  Content="=" Grid.Row="5" Grid.Column="3" Margin="2" FontSize="25" Background="#ADD8E6"/>
    </Grid>
</Window>